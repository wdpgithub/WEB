/* pages/course/course.wxss */
page{
  background: #efefef;
  height: 100%;
  width: 100%;
}
.cour_box{
  width: 90%;
  height: 500rpx;
  margin-bottom: 40rpx;
  background: #fff;
  margin: auto;
  padding-bottom: 40rpx;
}
.cour_box image{
  width: 90%;
  height: 300rpx;
  margin-left:5%;
}
.cour_de{
  width: 90%;
  margin-left:5%;
  height: 88rpx;
  border-bottom:1px solid #c0c0c0; 
}
.cour_de2{
  width: 90%;
  margin-left:5%;
  height: 88rpx;
  color: #A3A3A3;
}
.cour_de .blo{
  height: 100rpx;
  display: block;
  line-height: 88rpx;
}
.cour_de .tit{ 
  width: 60%;
  float: left;
  font-size: 38rpx;
  font-weight: bold;
}
.cour_de .det {
  width: 36%;
  text-align: right;
  float: right;
  font-size: 35rpx;
}
.cour_de2 .tit2{ 
  width: 55%;
  font-size: 25rpx;
  display: block;
  line-height: 30rpx;
  text-align: left;
  margin-top: 20rpx;
}
.cour_de2 .det2{
  width: 65%;
  font-size: 25rpx;
  display: block;
  line-height: 52rpx;
  float: left;
}
.cour_de2 .det3{
  width: 35%;
  font-size: 25rpx;
  display: block;
  line-height: 52rpx;
  float: right;
  text-align: right;
}